{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "s3:*"
            ],
            "Resource": [
                "arn:aws:s3:::vimbiso-pay-terraform-state-*",
                "arn:aws:s3:::vimbiso-pay-terraform-state-*/*"
            ]
        },
        {
            "Effect": "Allow",
            "Action": [
                "dynamodb:*"
            ],
            "Resource": "arn:aws:dynamodb:af-south-1:*:table/vimbiso-pay-terraform-state-lock-*"
        },
        {
            "Effect": "Allow",
            "Action": [
                "ec2:Create*",
                "ec2:Delete*",
                "ec2:Describe*",
                "ec2:Modify*",
                "ec2:Authorize*",
                "ec2:Revoke*",
                "ec2:Attach*",
                "ec2:Detach*",
                "ec2:Associate*",
                "ec2:Disassociate*",
                "ec2:Allocate*",
                "ec2:Release*"
            ],
            "Resource": "*"
        },
        {
            "Effect": "Allow",
            "Action": [
                "elasticloadbalancing:*"
            ],
            "Resource": "*"
        },
        {
            "Effect": "Allow",
            "Action": [
                "acm:*"
            ],
            "Resource": "*"
        },
        {
            "Effect": "Allow",
            "Action": [
                "route53:*"
            ],
            "Resource": "*"
        },
        {
            "Effect": "Allow",
            "Action": [
                "ecr:*"
            ],
            "Resource": "arn:aws:ecr:af-south-1:*:repository/vimbiso-pay-*"
        },
        {
            "Effect": "Allow",
            "Action": [
                "ecr:GetAuthorizationToken"
            ],
            "Resource": "*"
        },
        {
            "Effect": "Allow",
            "Action": [
                "iam:Create*",
                "iam:Delete*",
                "iam:Get*",
                "iam:List*",
                "iam:Put*",
                "iam:Attach*",
                "iam:Detach*",
                "iam:Tag*",
                "iam:Untag*",
                "iam:PassRole",
                "iam:AddRoleToInstanceProfile",
                "iam:RemoveRoleFromInstanceProfile"
            ],
            "Resource": [
                "arn:aws:iam::*:role/vimbiso-pay-*",
                "arn:aws:iam::*:role/aws-service-role/*"
            ]
        },
        {
            "Effect": "Allow",
            "Action": [
                "logs:*"
            ],
            "Resource": "*"
        },
        {
            "Effect": "Allow",
            "Action": [
                "ecs:*"
            ],
            "Resource": "*"
        },
        {
            "Effect": "Allow",
            "Action": [
                "application-autoscaling:*"
            ],
            "Resource": "*"
        }
    ]
}
